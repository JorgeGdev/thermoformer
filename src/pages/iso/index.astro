---
import Layout from "../../layouts/DashboardLayout.astro";
import { ACTIVE_SIZES } from "../../config/sizes";

const sizeCards = ACTIVE_SIZES;

const btnBig =
  "w-full h-[110px] rounded-xl text-white font-semibold text-lg " +
  "bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 " +
  "shadow-lg shadow-blue-900/20 hover:from-blue-400 hover:via-blue-600 hover:to-blue-800 " +
  "active:scale-[0.98] transition flex items-center justify-center";
---

<Layout title="Get ISO • Pick size">
  <div class="max-w-5xl mx-auto">
    <h1 class="text-xl font-semibold mb-6">Get ISO — choose size</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
      {sizeCards.map((s) => (
        <a href={`/iso/${s}`} class={btnBig}>
          SIZE {s}
        </a>
      ))}
    </div>

    <a href="/" class="inline-block mt-6 text-blue-600 hover:underline">← Back</a>
  </div>
</Layout>
