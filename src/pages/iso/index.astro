---
import Layout from "../../layouts/DashboardLayout.astro";
import { ACTIVE_SIZES } from "../../config/sizes";
import WarpBackground from "../../react/WarpBackground.tsx";
import ISOStats from "../../react/ISOStats.tsx";

const sizeCards = ACTIVE_SIZES;

const btnBig =
  "w-full h-[110px] rounded-xl text-white font-semibold text-lg " +
  "bg-gradient-to-r from-slate-600 via-slate-700 to-slate-800 " +
  "shadow-lg shadow-slate-900/20 hover:from-slate-500 hover:via-slate-600 hover:to-slate-700 " +
  "active:scale-[0.98] transition flex items-center justify-center";
---

<Layout title="Get ISO • Pick size">
  <!-- Shader Background -->
  <WarpBackground client:load style={{ background: 'linear-gradient(135deg, #65BB45, #4A9B35, #65BB45)' }} />

  <div class="max-w-5xl mx-auto p-4">
    <h1 class="text-xl font-semibold mb-6 text-white">Get ISO — choose size</h1>
     
    <!-- Size Selection Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5 my-20 mx-2.5 py-12.5 px-2.5 border border-solid border-white rounded-lg flex justify-between items-center">
      {sizeCards.map((s) => (
        <a href={`/iso/${s}`} class={btnBig}>
          SIZE {s}
        </a>
      ))}
    </div>

     <!-- ISO Stats Component -->

     <ISOStats client:load />

    <a href="/" class="inline-block text-xl mt-6 text-slate-50 hover:underline">← Back</a>
  </div>
</Layout>
