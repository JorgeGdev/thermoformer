---
import Layout from "../layouts/DashboardLayout.astro";
import Clock from "../react/Clock";
import RollsGallery from "../react/RollsGallery";
import WarpBackground from "../react/WarpBackground.tsx";
---
<Layout title="Intake">

  <!-- Shader Background -->
  <WarpBackground client:load style={{ background: 'linear-gradient(135deg, #65BB45, #4A9B35, #65BB45)' }} />
  <div class="max-w-4xl mx-auto space-y-6">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold">Select thermoformer</h2>
      <Clock client:load />
    </div>

  <!-- Responsive: column en móvil, row centrado en sm+ -->
  <div class="flex flex-col sm:flex-row items-center justify-center gap-5 w-full">
  <!-- Botón Thermoformer 1 -->
  <a
    href="/intake/thermoformer-1"
    class="w-full sm:w-[260px] h-[120px] 
           rounded-xl text-white font-semibold text-lg
           bg-gradient-to-r from-slate-600 via-slate-700 to-slate-800
           shadow-lg shadow-slate-900/20
           hover:from-slate-500 hover:via-slate-600 hover:to-slate-700
           active:scale-[0.98]
       transition flex items-center justify-center"
  >
    THERMOFORMER 1
  </a>

  <!-- Botón Thermoformer 2 -->
  <a
    href="/intake/thermoformer-2"
    class="w-full sm:w-[260px] h-[120px]
           rounded-xl text-white font-semibold text-lg
           bg-gradient-to-r from-slate-600 via-slate-700 to-slate-800
           shadow-lg shadow-slate-900/20
           hover:from-slate-500 hover:via-slate-600 hover:to-slate-700
           active:scale-[0.98]
           transition flex items-center justify-center"
  >
    THERMOFORMER 2
  </a>
</div>

<div class="max-w-6xl mx-[10px] space-y-6 rounded-lg my-[120px] p-10 border-[1.5px] border-white">
    <h2 class="text-xl font-semibold">Roll Stickers Viewer</h2>
    <RollsGallery client:load />
  </div>


    <p class="text-sm opacity-75">Mobile ready: large touch targets, gradients, and focus ring for accessibility.</p>
  </div>
</Layout>
