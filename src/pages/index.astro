---
import Layout from "../layouts/DashboardLayout.astro";
import WarpBackground from "../react/WarpBackground.tsx";
---
<Layout title="Home">
  <!-- Shader Background -->
  <WarpBackground client:load style={{ background: 'linear-gradient(135deg, #65BB45, #4A9B35, #65BB45)' }} />
  
  <section class="grid place-items-center h-[70vh] relative z-10">
    <div class="text-center">
      <div class="text-4xl font-bold mb-2 text-white drop-shadow-lg">Plixies Control</div>
      <p class="text-sm opacity-90 text-white/80 drop-shadow">Production dashboard</p>
    </div>
  </section>
</Layout>
