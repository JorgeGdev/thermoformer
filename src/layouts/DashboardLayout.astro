---
import "../styles/global.css";  // ⬅️ IMPORTANTE
const { title = "Dashboard" } = Astro.props;
---
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} • Plixies</title>
  </head>
  <body class="h-screen bg-white text-slate-900 dark:bg-black dark:text-slate-100">
    <div class="flex h-full">
      <!-- Sidebar -->
      <aside class="w-56 shrink-0 border-r border-slate-200 dark:border-slate-800 bg-slate-50 dark:bg-slate-950">
        <div class="p-4 font-semibold text-blue-600 dark:text-blue-400">Plixies</div>
        <nav class="px-2 space-y-1 text-sm">
          <a class="block rounded px-3 py-2 hover:bg-blue-500 hover:text-white" href="/">Home</a>
          <a class="block rounded px-3 py-2 hover:bg-blue-500 hover:text-white" href="/intake">Intake</a>
          <a class="block rounded px-3 py-2 hover:bg-blue-500 hover:text-white" href="/iso">Get ISO</a>
          <a class="block rounded px-3 py-2 hover:bg-blue-500 hover:text-white" href="/packages">Packages</a>
          <a class="block rounded px-3 py-2 hover:bg-blue-500 hover:text-white" href="/stats">Stats</a>
        </nav>
      </aside>

      <div class="flex-1 flex flex-col min-w-0">
        <header class="flex items-center justify-between px-4 h-14 border-b border-slate-200 dark:border-slate-800">
          <h1 class="text-base font-medium">{title}</h1>
          <button
            class="rounded px-3 py-1.5 text-sm bg-blue-600 text-white hover:bg-blue-700"
            onclick="document.documentElement.classList.toggle('dark')"
          >Dark</button>
        </header>

        <main class="p-4 overflow-auto">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
