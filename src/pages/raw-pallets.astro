---
import Layout from "../layouts/DashboardLayout.astro";
import PalletScan from "../react/PalletScan";
import RawPalletsTable from "../react/RawPalletsTable";
import RawPalletsGallery from "../react/RawPalletsGallery.tsx";
import WarpBackground from "../react/WarpBackground.tsx";
---

<Layout title="Raw Stock (Pallets)">
  <!-- Shader Background -->
  <WarpBackground client:load style={{ background: 'linear-gradient(135deg, #65BB45, #4A9B35, #65BB45)' }} />

  <div class="max-w-5xl mx-auto space-y-8">
    <section>
      <h2 class="text-lg font-semibold mb-2">Scan Pallet Sticker</h2>
      <PalletScan client:load />
    </section>

    <section>
      <h2 class="text-lg font-semibold mb-2">Inventory</h2>
      <RawPalletsTable client:load />
    </section>

    <section class="mt-10">
      <RawPalletsGallery client:load />
    </section>
  </div>
</Layout>
